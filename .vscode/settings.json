{
  "editor.defaultFormatter": "jameszhanga.even-prettier",
  "editor.formatOnType": true,
  "formatSelectionAsHtml.formatter": "js-beautify",
  "formatSelectionAsHtml.htmlWhitespaceSensitivity": "css",
  "editor.defaultFoldingRangeProvider": "SimonSiefke.prettier-vscode",
  "css.format.enable": true,
  "html.autoCreateQuotes": true,
  "html.completion.attributeDefaultValue": "singlequotes",
  "prettier.enabledLanguageIds": [
    "csharp",
    "css",
    "flow",
    "elm",
    "handlebars",
    "html",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "less",
    "markdown",
    "mdx",
    "php",
    "postcss",
    "ruby",
    "scss",
    "solidity",
    "svelte",
    "svg",
    "typescript",
    "typescriptreact",
    "twig",
    "vue",
    "xml",
    "yaml",
    "graphql"
  ],
  "html.format.unformatted": "wbr",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "html.format.enable": true,
  "html.format.templating": true,
  "editor.unicodeHighlight.includeComments": true,
  "comments.openView": "file",
  "html-css-class-completion.enableEmmetSupport": true,
  "editor.suggest.preview": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[css]": {
    "editor.defaultFormatter": "michelemelluso.code-beautifier"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}